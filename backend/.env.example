# ──────────────────────────────────────────────────────────
# Django Secret Key - REQUIRED
# Generate: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# ──────────────────────────────────────────────────────────
DJANGO_SECRET_KEY=your-secure-secret-key-here-change-in-production

# Debug mode (set to False in production)
DEBUG=True

# ── Supabase ──────────────────────────────────────────────
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# ── Database ──────────────────────────────────────────────
# Required for production (SQLite used in debug if not set)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# ── CORS & Hosts ─────────────────────────────────────────
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ── Redis / Cache (production) ────────────────────────────
# REDIS_URL=redis://127.0.0.1:6379/1
# CACHE_BACKEND=django_redis.cache.RedisCache
# CACHE_LOCATION=redis://127.0.0.1:6379/1

# ── Celery (background tasks) ────────────────────────────
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ── Email ─────────────────────────────────────────────────
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=TownBasket <noreply@townbasket.in>
# ADMIN_EMAIL=admin@townbasket.in

# ── Sentry Error Tracking ────────────────────────────────
# SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
# SENTRY_TRACES_RATE=0.1
# SENTRY_ENVIRONMENT=production

# ── Security (production only) ───────────────────────────
# SECURE_SSL_REDIRECT=True
