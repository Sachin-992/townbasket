{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "numReplicas": 1,
        "startCommand": "python manage.py migrate && gunicorn townbasket_backend.wsgi --bind 0.0.0.0:$PORT",
        "healthcheckPath": "/api/health/",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}