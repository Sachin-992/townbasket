{
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://your-backend-url.railway.app/api/:path*"
        },
        {
            "source": "/((?!api|_next|static|robots.txt|sitemap.xml|manifest.json|favicon.svg).*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/robots.txt",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "text/plain"
                }
            ]
        },
        {
            "source": "/sitemap.xml",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/xml"
                }
            ]
        },
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}